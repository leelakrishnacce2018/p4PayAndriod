<?xml version = "1.0" encoding = "utf-8"?>
<androidx.cardview.widget.CardView xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:card_view = "http://schemas.android.com/apk/res-auto"
    android:layout_width = "match_parent"
    card_view:cardCornerRadius = "4dp"
    android:id = "@+id/card_view"
    android:layout_margin = "10dp"
    android:layout_height = "280dp">
    <LinearLayout
        android:id = "@+id/parent"
        android:layout_width = "match_parent"
        android:orientation = "vertical"
        android:background="@drawable/linerlayout_background"
        android:layout_height = "match_parent">
        <TextView
            android:layout_width = "match_parent"
            android:text="Date &amp; Time"
            android:layout_marginLeft="10dp"
            android:textColor = "#747676"
            android:layout_height = "25dp"
            android:layout_marginBottom="1dp"/>
        <TextView
            android:id = "@+id/datetime"
            android:layout_width = "match_parent"
            android:textColor = "#333333"
            android:layout_height = "25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="1dp"/>
        <TextView
            android:layout_width = "match_parent"
            android:text="Transferrred TO"
            android:textColor = "#747676"
            android:layout_height = "25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="1dp"/>
        <TextView
            android:id = "@+id/transfer_to"
            android:layout_width = "match_parent"
            android:textColor = "#333333"
            android:layout_height = "25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="1dp"/>
        <TextView
            android:layout_width = "match_parent"
            android:text="Transferred From"
            android:textColor = "#747676"
            android:layout_height = "25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="1dp"/>
        <TextView
            android:id = "@+id/transfer_from"
            android:layout_width = "match_parent"
            android:textColor = "#333333"
            android:layout_height = "25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="1dp"/>
        <TextView
            android:layout_width = "match_parent"
            android:text="Transferred Amount"
            android:textColor = "#747676"
            android:layout_height = "25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="1dp"/>
        <TextView
            android:id = "@+id/transfer_amount"
            android:layout_width = "match_parent"
            android:textColor = "#333333"
            android:layout_height = "25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:weightSum="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".9"
                android:src="@drawable/repeat" />
            <TextView
                android:text="Repeat this transation"
                android:layout_weight=".2"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textColor="@color/background_dashboard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>